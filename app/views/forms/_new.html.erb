<div>
 <p>新規投稿画面</p>
 <p><%= attachment_image_tag current_user, :profile_image, format: 'jpeg', size: "100x100" %></p>
 <p><%= current_user.name %></p>
 <%= form_for(@emotion) do |f| %>
 <%= f.textarea :body %>
 <%= f.text_field :tag_list, value: @emotion.tag_list.join(',') %>  
 <%= f.submit "投稿する"%> 
 <% end %>
</div>