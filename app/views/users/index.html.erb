<% @users.each do |user| %>
  <div class= "user-emotion clearfix">
  <%= link_to user_top_path(user) do %>
    <section class="img-area">
    <% if user.profile_image.present? %>
      <p><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", class: "img" %></p>
    <% else %>
      <p><%= image_tag "no_image.jpg", format: 'jpeg', size: "100x100", class: "img" %></p>
    <% end %>
    </section>
  <% end %>
    <div class="right-content">  
    <section>
      <p>ユーザー名　<span class="strong"><%= user.name %></span></p>
      <p>フレンド登録数　<%=user.followers.count %>人</p><br>
      <p>紹介文</p><br>
        <span><%= user.introduction %><br></span>
      <p>お気に入りの球団</p><br>
        <span><%= user.favorite_team %></span>
    </section> 
    </div>
  </div>
<% end %>

