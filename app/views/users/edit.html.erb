<div class="info clearfix">
<h1>ユーザー情報編集</h1>
<%= form_for(@user) do |f| %>
<div class="profile-img">
<% if @user.profile_image.present? %>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", class: "img" %><br>
    <% else %>
      <%= image_tag "no_image.jpg", format: 'jpeg', size: "100x100", class: "img" %><br>
    <% end %>
    <%= f.attachment_field :profile_image, id: "file" %>
    <button class="btn" onClick="$('#file').click()">プロフィール画像設定</button>
</div>
<div class="user-edit">
    <p>ユーザー名</p>
    <span><%= f.text_field :name %></span>
    <p>紹介文</p>
    <span><%= f.text_area :introduction %></span>
    <p>お気に入りの球団</p>
    <span><%= f.text_field :favorite_team %></span>
    <p>野球との出会いは？？</p>
    <span><%= f.text_field :textbox %></span>
    <p>タグ</p>
    <span>
    <%= f.text_field :tag_list, value: @user.tag_list.join(',') %>  
    </span>
    <%= f.submit "編集する", class: "btn btn-dark" %>
<% end %>
<%= link_to "退会手続きをする", user_confirm_path(current_user), class: "btn" %>
</div>
</div>