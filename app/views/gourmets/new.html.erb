<%= form_with model: @gourmet, local: true do |f| %>
    <% if @gourmet.errors.any? %>
    <div class="notice">
            <p><%= @gourmet.errors.count %>件エラーがあります。</p>
            <% @gourmet.errors.full_messages.each do |message| %>
            <ul>
                <li><%= message %></li>
            </ul>
            <% end %>
    </div>
    <% end %>
<div class="user-info new">
<div class="demo-card-square mdl-card mdl-shadow--2dp">
  <div class="mdl-card__supporting-text">
    <p>グルメ投稿</p>
    <%= f.text_area :body %>
    <div id="star">
      <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
      <%= f.hidden_field :rate, id: :review_star %>
    </div>
    <span id="text-length"></span>
    タグ
    <%= f.text_field :tag_list, value: @gourmet.tag_list.join(',') %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <p>画像</p>
    <%= f.attachment_field :gourmet_images_images, multiple: true %>
    <%= f.attachment_field :gourmet_images_images, multiple: true %>
    <%= f.attachment_field :gourmet_images_images, multiple: true %>
    <%= f.submit "投稿する", class: "btn btn-primary" %>   
  <script>
    $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'gourmet[rate]',
        half: true,
      });
  </script>
    <% end %>
  </div>
</div>
</div>
</div>